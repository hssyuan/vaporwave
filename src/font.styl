@import 'nib'

h1, h2 
  text-transform: uppercase
  font-0: weight
  font-family: Helvetica, Arial, "Lucida Grande", sans-serif
  color: @white
  text-shadow: 
    @red-lighter -4px -4px 10px,
    @blue-lighter 4px 4px 6px,
    @blue-lighter 4px 4px 6px,
    @red-lighter -4px -4px 6px



.section  
  border-bottom: 4px solid green
  margin-top: 32px
  margin: 16px 8px
  z-index: 2
  display: block

.section::after 
  content: ''
  width: 100%
  height: 4px
  display: block
  position: relative
  top: 7px
  z-index: 1
  left: 2px
  background: pink
  

.section::before 
  content: ' '
  background-image: url('img/ic-section-small.png')
  background-repeat: none 
  position: relative
  display: block
  float: right
  top: -8px
  height: 30px
  width: 30px
  


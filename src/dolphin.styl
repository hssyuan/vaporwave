height = 500px/2
width = 500px/2

dolphin()
  content: ''
  display: block
  background-repeat: no-repeat
  background-image: url('img/dolphin.png')
  background-size: width height
  height: height
  width: width
  transform-origin: 50% 50%

.dolphins
  position: relative

.dolphins:before
  dolphin()

  position: absolute
  top: 50%
  left: 0
  transform: translateY(-50%) translateX(-20%) rotateY(180deg) rotateZ(-5deg)

.dolphins:after
  dolphin()

  position: absolute
  top: 50%
  right: 0
  transform: translateY(-20%) translateX(20%) rotateZ(-10deg)